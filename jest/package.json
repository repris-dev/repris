{
  "name": "@sampleci/jest",
  "version": "0.1.0",
  "private": true,
  "sideEffects": false,
  "files": [
    "package.json",
    "lib",
    ".tsc"
  ],
  "type": "module",
  "exports": {
    "./reporter": {
      "default": "./.tsc/reporter.js"
    },
    "./runner": {
      "default": "./.tsc/runner.js"
    },
    "./stopwatch-env": {
      "types": "./env/stopwatch-env.d.ts",
      "default": "./.tsc/setup-stopwatch.js"
    },
    "./jest-preset": "./jest-preset.js"
  },
  "dependencies": {
    "@sampleci/base": "workspace:*",
    "@sampleci/samplers": "workspace:*",
    "@sampleci/util": "workspace:*",
    "@jest/reporters": "^28.1.3", 
    "@jest/test-result": "^28", 
    "@jest/environment": "^28",
    "@jest/transform": "^28",
    "jest": "^28",
    "jest-util": "^28.1.3",
    "jest-circus": "^28",
    "jest-runtime": "^28",
    "chalk": "^5.0.1",
    "jest-haste-map": "^28",
    "lilconfig": "^2.0"
  },
  "devDependencies": {
    "@types/jest": "^28",
    "@types/node": "^16",
    "@jest/expect": "^28",
    "@jest/types": "^28",
    "npm-run-all": "4.1.5",
    "typescript": "~4.7",
    "vite": "~2.9"
  },
  "scripts": {
    "build:tsc": "tsc --build tsconfig.json tsconfig.spec.json",
    "build:vite": "MODE=production vite build",
    "build": "run-s -l build:tsc build:vite",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "license": "MIT"
}
