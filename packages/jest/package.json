{
  "name": "@repris/jest",
  "version": "0.1.0",
  "private": true,
  "sideEffects": false,
  "files": [
    "package.json",
    "lib",
    ".tsc"
  ],
  "type": "module",
  "bin": {
    "repris": "./script/cli.mjs"
  },
  "exports": {
    "./reporter": {
      "development": "./.tsc/reporter.js",
      "default": "./lib/reporter.js"
    },
    "./summaryReporter": {
      "development": "./.tsc/summaryReporter.js",
      "default":  "./lib/summaryReporter.js"
    },
    "./runner": {
      "development": "./.tsc/runner.js",
      "default": "./lib/runner.js"
    },
    "./stopwatch-env": {
      "types": "./env/stopwatch-env.d.ts",
      "development": "./.tsc/setupStopwatch.js",
      "default": "./lib/setupStopwatch.js"
    },
    "./cli": {
      "development": "./.tsc/cli.js",
      "default": "./lib/cli.js"
    },
    "./jest-preset": "./jest-preset.js"
  },
  "dependencies": {
    "@repris/base": "workspace:*",
    "@repris/samplers": "workspace:*",
    "@repris/util": "workspace:*",
    "@jest/core": "^29",
    "@jest/reporters": "^29", 
    "@jest/test-result": "^29", 
    "@jest/environment": "^29",
    "@jest/transform": "^29",
    "jest": "^29",
    "jest-util": "^29",
    "jest-config": "^29",
    "jest-circus": "^29",
    "jest-runtime": "^29",
    "chalk": "^5.0.1",
    "jest-haste-map": "^29",
    "lilconfig": "^2.0",
    "commander": "^10.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29",
    "@types/node": "^18",
    "@jest/expect": "^29",
    "@jest/types": "^29",
    "npm-run-all": "4.1.5",
    "typescript": "^5.1",
    "vite": "^4.4"
  },
  "scripts": {
    "build:tsc": "tsc --build tsconfig.json tsconfig.spec.json",
    "build:vite": "MODE=production vite build",
    "build": "run-s -l build:tsc build:vite",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "license": "MIT"
}
